#!/app/bash

clean=false

if [ $1 = "ccdev" ]
then
    php /home/gabi/www3/bin/console cache:clear
    clean=true
    break
fi

if [ $1 = "ccprod" ]
then
    php /home/gabi/www3/bin/console cache:clear --env=prod
    clean=true
    break
fi

if [ $1 = "assets" ]
then
    sudo php /home/gabi/www3/bin/console assets:install --symlink
    break
fi

if [ $1 = "deploy" ]
then
    sudo php /home/gabi/www3/bin/console assetic:dump
    break
fi

if [ $1 = "sql" ]
then
    php /home/gabi/www3/bin/console doctrine:schema:update --force
    break
fi

if [ $1 = "cosql" ]
then
    mysql --user=gabi --password=GabiGabi rdo
    break
fi

if [ $clean = true ]
then
    sudo chmod -R 775 /home/gabi/www3/var/cache
    sudo chown -R gabi:www-data /home/gabi/www3/var/cache
    sudo chmod -R 775 /home/gabi/www
3/web
    sudo chown -R gabi:www-data /home/gabi/www2/web
    sudo chmod -R 775 /home/gabi/www2/var/logs
    sudo chown -R gabi:www-data /home/gabi/www2/var/logs
    sudo chmod -R 775 /home/gabi/www2/var/sessions
    sudo chown -R gabi:www-data /home/gabi/www2/var/sessions
    break
fi
